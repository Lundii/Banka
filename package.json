{
  "name": "banka",
  "version": "1.0.0",
  "description": "Banka is a light-weight core banking application that powers banking operations like account creation, customer deposit and withdrawals.",
  "main": "index.js",
  "scripts": {
    "start": "node build/server.js --inspect",
    "start-dev": "nodemon --exec ./node_modules/.bin/babel-node ./src/server.js --inspect",
    "build": "babel src --out-dir build",
    "heroku-postbuild": "npm run build",
    "test": "nyc --reporter=text --reporter=lcov mocha --recursive --require @babel/polyfill --require @babel/register --exit",
    "coverage": "nyc --reporter=lcov --reporter=text mocha --recursive --require @babel/register --exit",
    "coveralls": "nyc --reporter=lcov --reporter=text mocha --recursive --require @babel/register --exit --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "nyc": {
    "exclude": [
      "**/database/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lundii/Banka.git"  
  },
  "keywords": [],
  "author": "Onu Monday Emmanuel",
  "email": "mondayemmanuel67@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Lundii/Banka/issues"
  },
  "homepage": "https://github.com/Lundii/Banka#readme",
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.0.0",
    "pg": "^7.9.0",
    "express-validator": "^5.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "babel-plugin-istanbul": "^5.1.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.5",
    "mocha": "^6.1.2",
    "mocha-lcov-reporter": "^1.3.0",
    "ndb": "^1.0.44",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "travis": "^0.1.1"
  }
}
